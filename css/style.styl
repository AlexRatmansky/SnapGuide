.list_vert-enter-active,
.list_hor-enter-active {
  transition: all .25s ease-out;
}

.list_vert-leave-active,
.list_hor-leave-active  {
  transition: all .2s ease-out;
}

.list_vert-enter {
  opacity: 0;
  transform: translateX(-5px);
}

.list_vert-leave-to {
  opacity: 0;
  transform: translateX(4px);
}

.list_hor-enter {
  opacity: 0;
  transform: translateY(-5px);
}

.list_hor-leave-to {
  opacity: 0;
  transform: translateY(4px);
}