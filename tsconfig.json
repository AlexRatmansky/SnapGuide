{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "node_modules/@types", "src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
